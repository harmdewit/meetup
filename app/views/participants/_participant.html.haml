.stack.linkedin{:data => {:linkedin => participant.user.linkedin_id}}
	.main_card
		.clickarea
		= link_to new_participant_connection_url(participant), :remote => true do
			.add_connection
		.card.front
			%a{:href => "#"}= participant.connections.count
			.card_inside
				%h2= participant.user.first_name + " " + participant.user.last_name
				%small
				%p= participant.motivation
		
		.card.back
			%a{:href => "#"}= participant.connections.count
			.card_inside
				%img{:alt => "picture"}
				%h2= participant.user.first_name + " " + participant.user.last_name
				%small
				
	.connections
	
		- participant.connections.each do |connection|
		
			.card
				.card_inside
					%h2= connection.participant.user.first_name + " " + connection.participant.user.last_name
					%p= connection.participant.motivation