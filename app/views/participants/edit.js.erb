$('.hide_overlay').click(function() {
	$("#overlay").hide();
});

$('#modal textarea').keydown(function() {
	var length = $(this).val().length;
	$(this).parent().parent().parent().children('small').html('Nog ' + (139 - length) + ' karakters over');
});