#information
	
	- flash.each do |key, msg|
		.notification{:class => key}
			- if key == "error"
				%span.icon !
			- else
				%span.icon 2
				
			.close.icon *
			= msg

	.title
		%h2= @meeting.title
		%h3= "(#{@meeting.participants.count})"
		%input{:placeholder => "Zoek...", :type => "text"}/
	%p= @meeting.description
	
	%ul
		%li
			%a 1
		%li.active
			%a 2
		%li
			%a 3
		%li
			%a 4
		%li
			%a 5

#main_content
	- @array = ""

	= render @meeting.participants