#information
	
	- if notice
		.notice.error
			%span.icon !
			.close.icon *
			= notice

	.title
		%h2= @meeting.title
		%small= #{}"(#{@meeting.participants.count})"
		%input{:placeholder => "Zoek...", :type => "text"}/
	%p= @meeting.description
	
	%ul
		%li
			%a 1
		%li.active
			%a 2
		%li
			%a 3
		%li
			%a 4
		%li
			%a 5

#main_content
	- @array = ""

	- @meeting.participants.each do |p|

		.stack.linkedin{:data => {:linkedin => p.user.linkedin_id}}
			.main_card
				.clickarea
				= link_to new_participant_connection_url(p), :remote => true do
					.add_connection
				.card.front
					%a{:href => "#"}= p.connections.count
					.card_inside
						%h2= p.user.first_name + " " + p.user.last_name
						%small
						%p= p.motivation
			
				.card.back
					%a{:href => "#"}= p.connections.count
					.card_inside
						%img{:alt => "picture"}
						%h2= p.user.first_name + " " + p.user.last_name
						%small
					
			.connections
		
				- p.connections.each do |connection|
			
					.card
						.card_inside
							%h2= connection.participant.user.first_name + " " + connection.participant.user.last_name
							%p= connection.participant.motivation