!!!
%html
	%head
		%title Portal
		= stylesheet_link_tag 'reset.css'
		= stylesheet_link_tag 'main.css'
		= csrf_meta_tag
		
		= javascript_include_tag 'jquery'
		= javascript_include_tag 'rails'
		= javascript_include_tag 'script'
	%body
		#overlay
			#centerpack
				#modal
					.colorindicator
					.content
					-# %strong Afmelden voor het event "eventnaam"?
						%p Weet je zeker dat je je wilt afmelden voor het event "eventnaam"?
						
						.buttons
							%a{:href => "#"} 
								%span.icon 3
								Ja, afmelden
							%a{:href => "#"}
								%span.icon d
								Nee, annuleren
		#container
			%header
				%nav
					%ul
						%li.active
							=link_to 'Meeting informatie', @meeting
						%li
							=link_to 'Deelnemers', "#{meeting_path(@meeting)}/participants"
				#personal_info
					- if @profile
						- if @profile.picture_url
							= image_tag @profile.picture_url
						.info
							Welkom,
							%br/
							%a{:href => user_path(@profile.id)}
								%strong= @profile.first_name + " " + @profile.last_name
							.dropdown
								%span.icon y
								%span.text Opties
							= link_to 'Logout', logout_url, :method => 'delete' 
			.spacer
			#information
				
				- if notice
					%p#notice= notice
				.title
					%h2= @meeting.title
					%small= #{}"(#{@meeting.participants.count})"
					%input{:placeholder => "Zoek...", :type => "text"}/
				%p= @meeting.description
				#main_content
					=yield
			
			%footer
		
