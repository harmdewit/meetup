!!!
%html
	%head
		%title Portal
		= stylesheet_link_tag :all
		= javascript_include_tag :defaults
		= csrf_meta_tag
	%body
		- if admin_signed_in?
			Signed in as #{link_to current_admin.email, admin_path(current_admin)} |
			#{link_to "sign out", destroy_admin_session_path}
		- else
			#{link_to "Register", new_admin_registration_path} | #{link_to "Sign in", new_admin_session_path}
		-	if notice
			%p#notice= notice
		= yield
