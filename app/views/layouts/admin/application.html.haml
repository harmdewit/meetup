!!!
%html
	%head
		%title Portal	
		= stylesheet_link_tag 'admin/reset.css'
		= stylesheet_link_tag 'admin/main.css'
		= stylesheet_link_tag 'admin/css3.css'
		= stylesheet_link_tag 'admin/custom-theme/jquery-ui-1.8.1.custom.css'
		= csrf_meta_tag
		
		= javascript_include_tag 'admin/jquery-1.4.2.min.js'
		= javascript_include_tag 'admin/jquery-ui.min.js'
		= javascript_include_tag 'admin/jquery.wysiwyg.js'
		= javascript_include_tag 'admin/excanvas.js'
		= javascript_include_tag 'admin/jquery.visualize.js'
		= javascript_include_tag 'admin/script.js'
		
	%body
		#overlay2
			#centerpack
				#modal
		#bokeh
			#container
				#header
					%h1#logo Admin Control Panel
					
					#header_buttons
						- if admin_signed_in?
							= link_to "#{current_admin.email} ", admin_admin_path(current_admin)
							= link_to "sign out", destroy_admin_session_path
						- else
							= link_to "Register", new_admin_registration_path
							= link_to "Sign in", new_admin_session_path
							
					%ul#main-nav
						- if params[:controller] == "admin/users"
							%li
								= link_to "Gebruikers", admin_users_path, {:class => "current"}
						- else
							%li
								= link_to "Gebruikers", admin_users_path
						- if params[:controller] == "admin/meetings" || params[:controller] == "admin/connections"
							%li
								= link_to "Meetings", admin_meetings_path, {:class => "current"}
						- else
							%li
								= link_to "Meetings", admin_meetings_path
							
				#content
					- if notice
						.notification.success= notice
						
					=yield
